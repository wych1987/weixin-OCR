.box_img {
  background-color: #fff;
  height:80vh;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.box_img_item {
   width: 33%;
   box-sizing: border-box;
   height: calc(80vh/3);
   background-color: #ededed;
   border:1px solid #f6f6f6;
   display: flex;
   align-items: center;
   justify-content: center;
}

.img_item {
  flex:1;
}

