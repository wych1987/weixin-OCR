@import "../../lib/weui.wxss";

.page-body {
  padding:10rpx 20rpx;
}
.page-title{
  font-size: 28rpx;
  text-align: center;
  height:40rpx;
}
.page-section{
  margin-bottom: 20rpx;
}
.weui-input {
  width: 100%;
  height: 44px;
  line-height: 44px;
}
.number-show-box{
  margin-top: 50rpx;
  margin-bottom: 80rpx;
  height:80vw;
  background-color: #fff;
  padding-right: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.number-input{
  width:70rpx;
  height:100rpx;
  border:4rpx solid #07c160;
  background-color: #fff;
  line-height: 100rpx;
  font-size: 100rpx;
  font-weight: 700;
  text-align: center;
  margin-left: 8rpx;
  color:#ff8907
}
.number-cell-line{
  background-color: #333;
  height:8rpx;
  width:90%;
  margin-right: -20rpx;
  margin-bottom: 10rpx;
}
.number-cell-input{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.number-cell,
.number-text{
  letter-spacing: 16rpx;
  line-height: 120rpx;
  font-size: 120rpx;
  font-weight: 700;
  text-align: right;
  height:120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
}
.number-cell-text,.number-input{
  flex:1;
}
.number-symbol{
  color:#07c160;
  margin-top: -18rpx;
  font-size: 120rpx;
  font-weight: 700;
}
.button {
  width: 300rpx;
  text-align: center;
  margin: 10rpx auto 0 auto;
  height: 80rpx;
  color: white;
  border-radius: 10rpx;
  line-height: 80rpx;
  background-color: #07c160;
}
.number-cell,.number-cell-input{
  display: flex;
  flex-direction: row;
  justify-content: right;
  align-items: center;
  position: relative;
}
.number-cell-input .number-symbol-result{
  color:#ff8907;
  position: absolute;
  right:3em;
  height:120rpx;
  line-height: 120rpx;
}
 