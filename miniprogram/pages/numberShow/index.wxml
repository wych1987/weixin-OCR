<view class="page-body">
  <View class="page-title">
    <text>小学两位数加减乘除口算训练</text>
  </View>
  <view class="section section_gap">
    <view class="section__title">
      <text style="margin-right: 10rpx;">音效</text>
      <switch checked="{{audioChecked}}" bindchange="audioSwitchChange" />
    </view>
  </view>
  <view class="number-show-box">
    <View class="number-cell">
      <text class="number-text">{{topic.num1}}</text>
    </View>

    <View class="number-cell">
      <text class="number-symbol">{{topic.symbolStr}}</text> <text class="number-text">{{topic.num2}}</text>
    </View>
    <view class="number-cell-line"></view>
    <view class="number-cell-input">
      <text class="number-symbol">=</text> 
      <input class="number-input" type="number" maxlength="1"   />
      <input class="number-input" type="number" maxlength="1"   />
      <input class="number-input" type="number" maxlength="1"   />
    </view>
  </view>

  <view class="button" bindtap="changeTopic"  >换一题</view>

</view>