/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #e3e3e3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.button {
  width: 300rpx;
  text-align: center;
  margin: 10rpx auto 0 auto;
  height: 80rpx;
  color: white;
  border-radius: 10rpx;
  line-height: 80rpx;
  background-color: #07c160;
  padding:0;
}

.button_clear {
  width: 160rpx;
  text-align: center;
  margin: 30rpx auto 0 auto;
  height: 80rpx;
  color: #07c160;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: rgba(255, 255, 255, 0.8);
}
